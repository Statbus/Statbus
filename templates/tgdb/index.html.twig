{% extends 'tgdb/page.html.twig' %}
{% block breadcrumbs %}{% endblock %}
{% block cardHeader %}
	TGDB
{% endblock %}
{% block cardBody %}
	<div class="row">
		<div class="col-12 col-xl-8 mb-4">
			<div class="grid mb-4">
				{% for a in apps %}
					<a href="{{a.url}}" class="btn btn-primary d-flex justify-content-between align-items-center {{a.disabled ? 'disabled'}} g-col-12 g-col-md-4 g-col-lg-3">
						<span class="h1 m-0 me-2">
							<i class="{{a.icon}}"></i>
						</span>
						<span class="h6 m-0 fw-bold text-end">{{a.name}}</span>
					</a>
				{% endfor %}
			</div>
			{% include 'tgdb/components/recentActivity.html.twig' %}
		</div>
		<div class="col-12 col-xl-4">
			<div class="card">
				<div class="card-body">
					{% include 'tgdb/components/memos.html.twig' %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
